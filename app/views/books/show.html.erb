<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<% if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>

		<h2>User info</h2>
		<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %>
<table class="table">
	<tbody>
		<tr></tr>

		<tr>
			<th>name</th>
			<th><%= @book.user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= @book.user.introduction %></th>
		</tr>
	</tbody>
</table>
				<div class="row">
					<% if @book.user == current_user %>
					<p>
						<%= link_to '', edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% else %>
					<p>
						<%= link_to '', user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% end %>
				</div>

		<h2>New book</h2>
		<%= render 'books/newform', book: @newbook %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path %></td>
					<td><%= @book.body %></td>
					<% if @book.user == current_user %>
					<td><%= link_to "Edit",edit_book_path, class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<% end %>
					<% if @book.user == current_user %>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>

	</div>
</div>
</div>
</div>
